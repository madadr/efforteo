{
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/api/authentication/{catchAll}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authentication-service",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/api/authentication/{catchAll}",
      "UpstreamHttpMethod": [ "Get", "Post", "Delete" ]
    },
    {
      "DownstreamPathTemplate": "/api/accounts/{catchAll}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "accounts-service",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/api/accounts/{catchAll}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put" ]
    },
    {
      "DownstreamPathTemplate": "/api/activities/{catchAll}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "activities-service",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/api/activities/{catchAll}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl" : "api-service:5000" 
  }
}